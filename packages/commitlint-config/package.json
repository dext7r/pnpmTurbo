{
  "name": "@h7ml/commitlint-config",
  "version": "1.0.0",
  "description": "commitlint 规则配置",
  "author": "h7ml <h7ml@qq.com>",
  "license": "ISC",
  "main": "dist/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "serve": "unbuild && pushstate-server",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@commitlint/config-conventional": "^17.1.0",
    "commitlint-config-cz": "^0.13.3",
    "@antfu/eslint-config": "^0.35.3",
    "@antfu/ni": "^0.20.0",
    "@antfu/utils": "^0.7.2",
    "@types/node": "^18.14.1",
    "bumpp": "^9.0.0",
    "eslint": "^8.34.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.1.2",
    "pnpm": "^7.27.1",
    "rimraf": "^4.1.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.2",
    "vite": "^4.1.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "peerDependencies": {
    "commitlint-config-cz": ">= 0"
  }
}
